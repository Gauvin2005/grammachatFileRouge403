{
  "name": "grammachat-tests",
  "version": "2.0.0",
  "description": "Suite de tests compl√®te et professionnelle pour Grammachat",
  "main": "run-tests.js",
  "scripts": {
    "test": "node run-tests.js",
    "test:failing": "NODE_ENV=test DISABLE_RATE_LIMITING=true npx ts-node test-failing.ts",
    "test:with-server": "node test-with-server.js",
    "test:comprehensive": "npx ts-node comprehensiveTestRunner.ts",
    "test:api": "NODE_ENV=test DISABLE_RATE_LIMITING=true npx ts-node --compiler-options='{\"moduleResolution\":\"node\"}' api/apiTester.ts",
    "test:database": "NODE_ENV=test npx ts-node database/databaseTester.ts",
    "test:services": "NODE_ENV=test npx ts-node services/serviceTester.ts",
    "test:features": "NODE_ENV=test npx ts-node features/featureTester.ts"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "mongodb": "^6.0.0",
    "mongoose": "^8.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "mongodb-memory-server": "^10.2.3",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "testing",
    "grammachat",
    "api",
    "database",
    "services",
    "features",
    "comprehensive"
  ],
  "author": "Grammachat Team",
  "license": "MIT"
}
