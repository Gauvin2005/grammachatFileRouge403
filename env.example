# Configuration des ports Docker
API_PORT=3000
MONGODB_PORT=27017

# Configuration MongoDB
MONGODB_URI=mongodb://mongodb:27017/grammachat
MONGODB_DATABASE=grammachat

# Configuration API
NODE_ENV=development
API_HOST=0.0.0.0
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# LanguageTool API
LANGUAGETOOL_API_URL=https://api.languagetool.org/v2/check
LANGUAGETOOL_API_KEY=your-languagetool-api-key

# Configuration XP et Gamification
XP_PER_CHARACTER=1
XP_BONUS_NO_ERRORS=10
XP_PENALTY_PER_ERROR=5
LEVEL_UP_THRESHOLD=100

# Configuration des notifications
EXPO_PUSH_TOKEN=your-expo-push-token

# Configuration CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
